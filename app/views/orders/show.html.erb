<%=render "shared/navbar"%>
<% if admin_signed_in?%>
<div class="container">
<div class="row">
  <div class="col text-center">
    <%= image_tag(fetch_image(@order.dish_id), size:"260x180") %>
    <h2 class="mt-2">Item :<%= @order.name %></h2>
    <h5 class="mt-1">Price :<%= @order.price %></h5>
    <h5>Restaurant :<%= fetch_name(@order.restaurant_id) %></h5>
    <h5>Status :shipped</h5>     
  </div>
</div>
</div>
<%elsif user_signed_in? %>
  <h1 class="text-center my-3"> Order Details</h1>
  <div class="container">
    <div class="row">
      <div class="col text-center">
        <%=image_tag(fetch_image(@order.dish_id), size:"260x180")%>
        <h2 class="mt-2">Item :<%=@order.name%></h2>
        <h5 class="mt-1">Price :<%=@order.price%></h5>
        <h5>Restaurant :<%= fetch_name(@order.restaurant_id) %></h5>
        <h5>Status :shipped</h5>
        <%=link_to "Label", new_order_path(:order =>{:dish_id => params[:id], :name =>@order.name, :price =>@order.price, :description =>@order.description, :restaurant_id =>@order.restaurant_id})%>      
      </div>
    </div>
  </div>
<%end%>
<%=render "shared/footer"%>