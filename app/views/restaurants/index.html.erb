<%= render "shared/navbar"%>
<h1 class="text-center">index page</h1>

<div class="text-center  mb-3">
  <%= search_form_for @q, action: :index do |f| %>
    <%= f.search_field :name_cont, placeholder:"",class:''%>      
    <%= f.submit class:''%>    
  <% end %>
</div>
<div class="row mx-0">
  <% @restaurants.each do |restaurant| %>
    <div class="col text-center">
      <div class="card" style="width: 18rem;">
      <a href="/restaurants/<%= restaurant.id%>" style="text-decoration:none;color:black">
        <img src="<%= url_for(restaurant.restaurant_image)%>" class="card-img-top" alt="..."width="50" height="200">
        <div class="card-body">
          <h5 class="card-title"><%=restaurant.name%></h5>
          <p class="card-text"><%=restaurant.description%></p>    
        </div>
      </a>
      </div>
    </div>
  <%end%>
</div>

<%= render "shared/footer"%>