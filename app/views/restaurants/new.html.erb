<%=render "/shared/navbar"%>
<h3 class="text-center mt-2">Welcome To Restaurant App</h3>
<div class="mt-2 form">
  <%= form_with model: @restaurant do |form| %>
    <div class="field form-group form-g">       
      <div>
        <h2 class="text-primary text-center">Create Your Restaurant<h2>
      </div>

      <div>
        <%= form.label :restaurant_name,class:'form-label'%><br>
        <%= form.text_field :name,class:'form-control'%>
      </div>
      <br>

      <div>
        <%= form.label :profile_photo,class:'form-label'%>
        <%= form.file_field :restaurant_image,class:'form-control'%>
      </div>
      <br>

      <div>
        <%= form.label :description,class:'form-label'%>
        <%= form.text_area :description,class:'form-control' %>      
      </div>
      <br>

      <div>
        <%= form.label :email,class:'form-label'%>
        <%= form.email_field :email,class:'form-control'%>
      </div>
      <br>

      <div>
        <%= form.label :address,class:'form-label'%><br>
        <%= form.text_area :address,class:'form-control'%>
      </div>
      <br>
      
      <div>
        <%= form.check_box :visibility,class:'form-label'%> 
        <%= form.label :restaurant_status%> 
      </div>      
      <br>

      <div>
        <%= form.submit class: 'btn btn-primary'%>
      </div>
      
  <%end%>
</div>
<%=render "shared/footer"%>

